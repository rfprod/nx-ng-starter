{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "api",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "tags": ["scope:api", "type:application"],
  "targets": {
    "build": {
      "configurations": {
        "firebase": {
          "extractLicenses": true,
          "fileReplacements": [
            {
              "replace": "apps/api/src/environments/environment.ts",
              "with": "apps/api/src/environments/environment.firebase.ts"
            }
          ],
          "inspect": false,
          "optimization": true
        },
        "production": {
          "extractLicenses": true,
          "fileReplacements": [
            {
              "replace": "apps/api/src/environments/environment.ts",
              "with": "apps/api/src/environments/environment.prod.ts"
            }
          ],
          "inspect": false,
          "optimization": true
        }
      },
      "executor": "@nx/webpack:webpack",
      "options": {
        "assets": ["apps/api/src/assets"],
        "budgets": [
          {
            "maximumError": "15mb",
            "maximumWarning": "12mb",
            "type": "initial"
          }
        ],
        "buildLibsFromSource": true,
        "compiler": "tsc",
        "main": "apps/api/src/main.ts",
        "outputPath": "dist/apps/api",
        "target": "node",
        "tsConfig": "apps/api/tsconfig.app.json",
        "webpackConfig": "apps/api/webpack.config.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/**/*.ts"]
      }
    },
    "prettier-check": {
      "executor": "./tools/executors/prettier:check",
      "options": {
        "config": ""
      }
    },
    "serve": {
      "configurations": {
        "firebase": {
          "buildTarget": "api:build:firebase"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      },
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api:build"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "compiler": "swc",
        "configFile": "apps/api/vitest.config.mts",
        "coverageProvider": "istanbul",
        "uiFramework": "none"
      }
    },
    "tsc-check": {
      "executor": "./tools/executors/tsc:check",
      "options": {
        "tsConfig": "{projectRoot}/tsconfig.app.json"
      }
    }
  }
}
