{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "tools",
  "projectType": "application",
  "sourceRoot": "tools",
  "tags": ["scope:tools", "type:workspace"],
  "targets": {
    "action-changes": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx ts-node -P ./tools/tsconfig.ts-tools.json ./tools/ts/actions/changes/changes.ts",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "action-codeowners": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx ts-node -P ./tools/tsconfig.ts-tools.json ./tools/ts/actions/codeowners/codeowners.ts",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "action-contribution-size": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx ts-node -P ./tools/tsconfig.ts-tools.json ./tools/ts/actions/contribution-size/contribution-size.ts",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "action-projects": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx ts-node -P ./tools/tsconfig.ts-tools.json ./tools/ts/actions/projects/projects.ts",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "clean-executor-compilation": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "rm -rf ./tools/executors/**/*.js ./tools/executors/**/**/*.js ./tools/executors/**/*.js.map ./tools/executors/**/**/*.js.map",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "compile-executors": {
      "dependsOn": ["clean-executor-compilation"],
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          {
            "command": "npx tsc -p ./tools/executors/tsconfig.executors.json",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "compodoc-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "compodoc -p tsconfig.compodoc.json -d ./dist/compodoc",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "compodoc-coverage-test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "compodoc -p tsconfig.compodoc.json -d ./dist/compodoc  --coverageTest 39",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "compodoc-serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "compodoc -p tsconfig.compodoc.json -s",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "coverage-stats": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx ts-node -P ./tools/tsconfig.ts-tools.json ./tools/ts/workspace/coverage-stats.ts",
            "forwardAllArgs": false
          }
        ]
      }
    },
    "help": {
      "executor": "./tools/executors/workspace:commands"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["tools/executors/**/*.ts", "tools/ts/**/*.ts", "tools/js/**/*.js"]
      }
    },
    "lint-shell": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "shellcheck tools/shell/*.sh tools/shell/utils/*.sh"
          }
        ]
      }
    },
    "prettier-configure": {
      "executor": "./tools/executors/prettier:configure",
      "options": {
        "config": ""
      }
    },
    "stylelint-configure": {
      "executor": "./tools/executors/stylelint:configure",
      "options": {
        "config": ""
      }
    },
    "test": {
      "dependsOn": ["clean-executor-compilation"],
      "executor": "@nx/vitest:test",
      "options": {
        "compiler": "swc",
        "configFile": "tools/vitest.config.mts",
        "coverageProvider": "istanbul",
        "uiFramework": "none"
      }
    },
    "tsc-check": {
      "executor": "./tools/executors/tsc:check",
      "options": {
        "tsConfig": "{projectRoot}/tsconfig.tools.json"
      }
    },
    "tsc-configure": {
      "executor": "./tools/executors/tsc:configure",
      "options": {
        "tsConfig": ""
      }
    }
  }
}
