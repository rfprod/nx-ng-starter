{
  "extends": ["../../.eslintrc.js"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["./package.json", "./generators.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/nx-plugin-checks": "error"
      }
    },
    {
      "files": ["module-boundaries.generator.ts"],
      "rules": {
        "@typescript-eslint/no-require-imports": "off",
        "max-lines-per-function": [
          "error",
          {
            "max": 55,
            "skipBlankLines": true,
            "skipComments": true
          }
        ]
      }
    }
  ]
}
