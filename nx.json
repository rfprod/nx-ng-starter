{
  "affected": {
    "defaultBase": "master"
  },
  "implicitDependencies": {
    ".eslintrc.angular.js": "*",
    ".eslintrc.cypress.js": "*",
    ".eslintrc.js": "*",
    ".eslintrc.module-boundaries.js": "*",
    "angular.json": "*",
    "nx.json": "*",
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*",
      "engines": "*",
      "scripts": "*"
    },
    "tsconfig.base.json": "*"
  },
  "newProjectRoot": "",
  "npmScope": "app",
  "targetDependencies": {
    "build": [
      {
        "projects": "dependencies",
        "target": "build"
      }
    ]
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheDirectory": "/tmp/nx/nx-ng-starter",
        "cacheableOperations": ["build", "lint", "test", "e2e", "build-storybook"],
        "runtimeCacheInputs": ["node -v", "echo $IMPORTANT_ENV_VAR"]
      },
      "runner": "@nrwl/workspace/tasks-runners/default"
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "cli": {
    "defaultCollection": "@nrwl/angular",
    "warnings": {
      "versionMismatch": false
    }
  },
  "defaultProject": "client",
  "generators": {
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:component": {
      "style": "scss",
      "changeDetection": "OnPush",
      "inlineStyle": false,
      "inlineTemplate": false
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/schematics:application": {
      "framework": "angular",
      "style": "scss",
      "unitTestRunner": "jest"
    },
    "@nrwl/schematics:library": {
      "style": "scss",
      "unitTestRunner": "jest"
    }
  }
}
