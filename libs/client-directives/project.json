{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "client-directives",
  "prefix": "app",
  "projectType": "library",
  "sourceRoot": "libs/client-directives/src",
  "tags": ["scope:client-directives", "type:ui"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/**/*.html"]
      }
    },
    "prettier-check": {
      "executor": "./tools/executors/prettier:check",
      "options": {
        "config": ""
      }
    },
    "stylelint-check": {
      "executor": "./tools/executors/stylelint:check",
      "options": {
        "config": ""
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "options": {
        "compiler": "swc",
        "configFile": "libs/client-directives/vitest.config.mts",
        "coverageProvider": "istanbul",
        "uiFramework": "angular",
        "tsConfig": "libs/client-directives/tsconfig.lib.json"
      }
    },
    "tsc-check": {
      "executor": "./tools/executors/tsc:check",
      "options": {
        "tsConfig": "{projectRoot}/tsconfig.lib.json"
      }
    }
  }
}
