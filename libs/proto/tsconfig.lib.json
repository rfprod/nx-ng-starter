{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "lib": ["dom", "es2018"],
    "outDir": "../../dist/out-tsc",
    "target": "es2015"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": ["src/test-setup.ts", "**/*.patch.ts", "**/*.mock.ts", "**/*.spec.ts"],
  "extends": "./tsconfig.json",
  "include": ["**/*.ts"]
}
