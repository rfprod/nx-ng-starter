{
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  },
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "moduleResolution": "bundler",
    "outDir": "../../dist/out-tsc",
    "sourceMap": true,
    "target": "ES2022",
    "useDefineForClassFields": false
  },
  "exclude": ["src/test-setup.ts", "**/*.spec.ts", "**/*.mock.ts", "**/*.stories.ts", "*.mts"],
  "extends": "./tsconfig.json",
  "include": ["**/*.ts"]
}
