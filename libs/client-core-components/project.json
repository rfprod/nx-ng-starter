{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "client-core-components",
  "prefix": "app",
  "projectType": "library",
  "sourceRoot": "libs/client-core-components/src",
  "tags": ["scope:client-core-components", "type:feature"],
  "targets": {
    "build-storybook": {
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "executor": "@storybook/angular:build-storybook",
      "options": {
        "browserTarget": "documentation:build:storybook",
        "compodoc": false,
        "configDir": "libs/client-core-components/.storybook",
        "outputDir": "dist/storybook/client-core-components"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.mjs",
        "lintFilePatterns": ["{projectRoot}/**/*.ts", "{projectRoot}/**/*.html"]
      }
    },
    "prettier-check": {
      "executor": "./tools/executors/prettier:check",
      "options": {
        "config": ""
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "browserTarget": "documentation:build:storybook",
        "compodoc": false,
        "configDir": "libs/client-core-components/.storybook",
        "port": 4400
      }
    },
    "stylelint-check": {
      "executor": "./tools/executors/stylelint:check",
      "options": {
        "config": ""
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "compiler": "swc",
        "configFile": "libs/client-core-components/vitest.config.mts",
        "coverageProvider": "istanbul",
        "uiFramework": "angular",
        "tsConfig": "libs/client-core-components/tsconfig.lib.json"
      }
    },
    "tsc-check": {
      "executor": "./tools/executors/tsc:check",
      "options": {
        "tsConfig": "{projectRoot}/tsconfig.lib.json"
      }
    }
  }
}
